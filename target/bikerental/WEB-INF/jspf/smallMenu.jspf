<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<fmt:setLocale value="${sessionScope.local}" />
<fmt:setBundle basename="local"  />
<nav>	
	<ul>
		<li class="logo"><fmt:message key="title"/> </li>
		<li style="float:left; margin-left: 25%; padding-top:6px; font-size: 28px; font-weight: bold; text-decoration: underline; color: white;"><c:out value="${menuLabel}"></c:out></li>
		<li style="float:right; margin-right:10px"><a href="BikeRentalServlet?command=logout"><fmt:message key="logoutLabel"/> </a></li>
		<li style="float:right"><a href="BikeRentalServlet?command=home"><fmt:message key="homeLabel"/></a></li>
		<li style="float:right; color: white; font-weight: bold; padding: 18px 0px 15px 10px;"><c:out value="${user.name}"></c:out></li>			
		<li style="float:right; color: white; padding: 18px 0px 15px 10px;">
			<c:if test="${user.role eq 'ADMIN'}"><fmt:message key="adminLabel"/> </c:if>
			<c:if test="${user.role eq 'USER'}"><fmt:message key="userLabel"/> </c:if>
	</ul>
</nav>